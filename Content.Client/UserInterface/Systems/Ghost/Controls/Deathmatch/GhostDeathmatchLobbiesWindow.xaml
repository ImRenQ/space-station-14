<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
               xmlns:tt="clr-namespace:Content.Client.UserInterface.Systems.Ghost.Controls.Deathmatch"
               Title="{Loc 'ghost-deathmatch-lobbies-title'}"
               MinSize="360 400"
               SetSize="360 400">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True">
        <Label Text="{Loc 'ghost-deathmatch-warning'}" RectClipContent="True" HorizontalAlignment="Left" Margin="10 0 0 0"> </Label>
        <cc:HSeparator />
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
            <tt:GhostDeathmatchLobbiesHeader Name="DeathmatchLobbiesHeader" />
            <cc:HSeparator />
        </BoxContainer>
        <ScrollContainer HorizontalExpand="True"
                 VerticalExpand="True"
                 SizeFlagsStretchRatio="6">
            <BoxContainer Name="Lobbies"
                          Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True">
                <!-- Lobbies get added here by code -->
            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
